.page-container {
  padding: 20rpx;
}

.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin: 20rpx 0 40rpx 0;
  padding: 0 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.contact-section {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx 20rpx;
  margin: 0 0 10rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 70%;
}

.contact-section.emergency {
  background-color: #fff5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-info {
  flex: 1;
}

.contact-type {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.contact-number {
  font-size: 26rpx;
  color: #666;
}

.contact-icon {
  font-size: 40rpx;
  margin-left: 20rpx;
}

.tips {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 10rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.tip-item {
  margin-bottom: 10rpx;
} 