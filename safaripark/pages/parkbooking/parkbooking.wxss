.park-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.park-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.park-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.park-info {
  flex: 1;
}

.park-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.park-stats {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.book-btn, .cancel-btn {
  min-width: 160rpx;
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.book-btn {
  background-color: #4CAF50;
  color: white;
}

.book-btn:active {
  background-color: #3d8b40;
  transform: translateY(2rpx);
}

.cancel-btn {
  background-color: #ff4d4f;
  color: white;
}

.cancel-btn:active {
  background-color: #cf4042;
  transform: translateY(2rpx);
}

.booking-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.picker {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.submit-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

button[type="primary"] {
  background: #4CAF50;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  font-weight: 500;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

button[type="primary"]:active {
  background: #3d8b40;
  transform: translateY(2rpx);
}

.booking-list {
  margin-top: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.booking-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.booking-item:last-child {
  border-bottom: none;
}

.booking-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.booking-time {
  font-size: 28rpx;
  color: #333;
}

.booking-status {
  font-size: 28rpx;
  color: #4CAF50;
}

.booking-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

/* 选项卡样式优化 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 10rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

/* 表单按钮样式统一 */
.form-item button, 
.picker {
  border-radius: 8rpx;
  background-color: #f9f9f9;
  padding: 16rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
}

/* 按钮点击效果 */
button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 园区详情弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 1000;
}

.modal.show {
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: calc(80vh - 120rpx);
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
  padding: 20rpx 0;
}

.animal-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.animal-item {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #eee;
}

.audio-guide {
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  border: 1rpx solid #eee;
} 