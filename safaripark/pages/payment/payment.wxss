.payment-container {
  padding: 30rpx;
}

.timer-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.timer {
  color: #ff4d4f;
  font-size: 32rpx;
}

.amount-section {
  background: #f8f8f8;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount {
  font-size: 48rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-top: 20rpx;
  display: block;
}

.payment-methods {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  display: block;
}

.payment-method-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.cancel-btn, .pay-btn {
  flex: 1;
  margin: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.pay-btn {
  background: #07c160;
  color: #fff;
} 