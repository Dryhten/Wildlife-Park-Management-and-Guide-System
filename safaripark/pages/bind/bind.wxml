<view class="bind-container">
  <view class="bind-header">
    <text class="bind-title">绑定手机号</text>
    <text class="bind-subtitle">绑定手机号后可以享受更多服务</text>
  </view>
  
  <view class="bind-form">
    <view class="input-group">
      <view class="input-label">手机号</view>
      <view class="input-wrapper">
        <input 
          class="phone-input" 
          type="number" 
          placeholder="请输入11位手机号" 
          maxlength="11"
          value="{{phone}}" 
          bindinput="onInputChange" 
        />
      </view>
    </view>
    
    <button class="bind-button" bindtap="bindPhone">立即绑定</button>
    
    <view class="bind-tips">
      <text>绑定手机号后，您可以：</text>
      <view class="tips-item">
        <text class="tip-dot">•</text>
        <text>接收园区重要通知</text>
      </view>
      <view class="tips-item">
        <text class="tip-dot">•</text>
        <text>快速找回账号</text>
      </view>
      <view class="tips-item">
        <text class="tip-dot">•</text>
        <text>享受会员专属优惠</text>
      </view>
    </view>
  </view>
</view> 