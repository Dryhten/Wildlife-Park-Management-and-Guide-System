.preference-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.picker {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.search-box {
  margin-bottom: 20rpx;
}

.search-box input {
  width: 100%;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 80rpx;
}

.animals-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 20rpx 0;
}

.animal-item {
  padding: 16rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  min-width: 120rpx;
  text-align: center;
  margin: 10rpx;
  position: relative;
  transition: all 0.3s;
}

.animal-item.selected {
  background-color: #4CAF50;
  color: #fff;
}

.animal-item:active {
  opacity: 0.7;
  transform: scale(0.95);
}

.save-btn {
  width: 100%;
  margin-top: 40rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.selected-animals {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.selected-item {
  background-color: #4CAF50;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.remove-btn {
  margin-left: 10rpx;
  font-size: 32rpx;
  padding: 0 10rpx;
}

.animals-list {
  max-height: 400rpx;
  overflow-y: auto;
  background: white;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.animal-option {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.animal-option.selected {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.animal-option:active {
  background-color: #f5f5f5;
}

.switch-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
} 