.schedule-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.schedule-title {
  font-size: 40rpx;
  color: #333;
  text-align: center;
  margin: 20rpx 0 40rpx;
  font-weight: bold;
  position: relative;
  padding-bottom: 20rpx;
}

.schedule-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
}

.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.schedule-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.schedule-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  object-fit: cover;
}

.schedule-info {
  flex: 1;
}

.schedule-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.schedule-time,
.schedule-location,
.schedule-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.schedule-time::before,
.schedule-location::before,
.schedule-description::before {
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background-color: #999;
  border-radius: 50%;
  margin-right: 8rpx;
}

.schedule-button {
  margin-top: 16rpx;
  padding: 16rpx 0;
  background-color: #4CAF50;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}

/* 悬浮窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 85%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.modal-body {
  padding: 30rpx;
}

.modal-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.modal-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.modal-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.modal-button {
  margin: 0 30rpx 30rpx;
  padding: 20rpx 0;
  background-color: #4CAF50;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
} 