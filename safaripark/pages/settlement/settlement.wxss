.container {
  padding: 20px;
  background-color: #f0f8ff;
  font-family: 'Arial', sans-serif;
}

.date-section {
  margin-bottom: 20px;
  padding: 12px;
  background-color: #4169e1;
  border-radius: 8px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  width: 100%;  /* 修正宽度为100% */
  text-align: center;
}

.section-title {
  font-size: 18px;
  color: rgb(253, 251, 251);
}

.selected-items {
  margin-bottom: 20px;
  width: 100%; /* 修正为自适应宽度 */
}

.item-card {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.05);
  padding: 12px; /* 增加内边距 */
  transition: box-shadow 0.3s ease;
}

.item-card:hover {
  box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.1); /* hover效果 */
}

.item-image {
  width: 50px;
  height: 50px;
  margin-right: 15px; /* 调整右边距 */
  border-radius: 8px;
  object-fit: cover;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.item-price {
  font-size: 14px;
  color: #FF5722;
}

.contact-info .input-group {
  margin-bottom: 20px;
}

.input-label {
  font-size: 15px;
  color: #555;
}

.input-field {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-top: 8px;
  font-size: 15px;
  background-color: #fff;
  /* box-sizing: border-box; */
  height: 20px;  /* 增加高度，确保文字显示不被遮挡 */
}

.input-field:focus {
  /* outline: none; */
  border-color: #4169e1; /* 聚焦时的边框颜色 */
}


.agreement-section {
  margin: 20px 0;
  padding: 15px;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.05);
}

.checkbox {
  margin-right: 10px;
}

.agreement-text {
  font-size: 14px;
  color: #555;
}

.total-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.total-text {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.submit-button {
  padding: 12px 24px;
  background-color: #4CAF50;
  color: white;
  border-radius: 5px;
  font-size: 13px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin-left: 50px;
}

.submit-button:hover {
  background-color: #45a049;
}

.submit-button:active {
  background-color: #3e8e41; /* 按钮按下时颜色 */
}
