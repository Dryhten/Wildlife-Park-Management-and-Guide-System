.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 50rpx;
  color: #4CAF50;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 800rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.required {
  color: red;
}

.picker {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.rating {
  display: flex;
  gap: 10rpx;
  padding: 20rpx 0;
}

.star {
  font-size: 40rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

input, textarea {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  padding: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 60rpx;
}

textarea {
  height: 200rpx;
  resize: none;
}

.buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx;
}

.submit-button, .reset-button {
  width: 200rpx;
  background-color: #4CAF50;
  color: #fff;
  padding: 15rpx 0;
  border-radius: 10rpx;
  font-size: 30rpx;
  border: none;
  margin: 0 20rpx;
}

.reset-button {
  background-color: #ccc;
}