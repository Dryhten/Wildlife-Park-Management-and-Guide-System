.poi-list-container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.poi-list-header {
  padding: 30rpx;
  background: white;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.poi-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.poi-card {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.poi-info {
  flex: 1;
}

.poi-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.poi-distance {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.distance-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  position: relative;
  padding: 16rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-input {
  height: 72rpx;
  padding: 0 60rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  left: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

/* 原有的列表样式 */
.poi-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.poi-category {
  font-size: 24rpx;
  color: #999;
}

.poi-distance {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.loading-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 排序提示样式 */
.sort-info {
  background: #fff;
  padding: 16rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

/* POI相关度标签样式 */
.poi-relevance {
  margin-top: 8rpx;
}

.relevance-tag {
  display: inline-block;
  background: #e8f5ff;
  color: #1890ff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  margin-top: 6rpx;
} 