.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

.article {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.section-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.tips {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.tip-item {
  margin-bottom: 10rpx;
} 