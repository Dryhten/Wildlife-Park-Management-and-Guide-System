.page-container {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.background {
  width: 100%;
  height: 400rpx; /* 固定高度 */
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.order-list {
  padding: 20rpx;
}

.order-item {
  padding: 10rpx;
  border-bottom: 1px solid #eee;
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  font-size: 28rpx;
  color: #333;
  position: relative;
  padding: 10rpx 20rpx;
}

.tab.active {
  color: #FF7B00;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF7B00;
  border-radius: 2rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.order-number {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #FF7B00;
}

.order-items {
  padding: 20rpx 0;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}

.item-quantity {
  font-size: 26rpx;
  color: #999;
}

.item-price {
  font-size: 30rpx;
  color: #FF7B00;
  font-weight: bold;
}

.order-footer {
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.contact-info {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.visit-date {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #FF7B00;
  background-color: #fff;
  border: 1px solid #FF7B00;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
}

.no-orders {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 门票弹窗样式 */
.ticket-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.ticket-content {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.ticket-header {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ticket-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.ticket-body {
  padding: 30rpx;
}

.ticket-info {
  margin-bottom: 20rpx;
}

.info-label {
  color: #666;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.ticket-items {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.ticket-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.item-name {
  color: #333;
  font-size: 28rpx;
}

.item-quantity {
  color: #666;
  font-size: 28rpx;
}

.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
  padding: 30rpx;
  background: #fff;
}

.qrcode-container {
  width: 400rpx;
  height: 400rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  background: #ffffff;
}

.qrcode-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  text-align: center;
} 