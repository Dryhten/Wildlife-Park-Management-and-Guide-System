.container {
  position: relative;
}

.scan-button {
  position: absolute;
  top: 26%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-top: 110rpx;
  margin-left: 280rpx;
  margin-bottom: 100rpx;
  width: 150rpx;
}

.scan-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.scan-text {
  font-size: 25rpx;
  color: #333;
}

/* 弹窗样式 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 90vh;
  padding: 30rpx;
  position: relative;
  overflow-y: auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.close-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 52rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  cursor: pointer;
  z-index: 10000;
}

.image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f8f8f8;
}

.detected-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.info-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.animal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.accuracy-text {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.bounding-box {
  position: absolute;
  border: 3px solid #4CAF50;
  pointer-events: none;
}

.animal-info {
  padding: 20rpx;
  max-height: 60vh;
  overflow-y: auto;
  margin-top: 10rpx;
}

.info-item {
  margin-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 14rpx;
  border-bottom: 1px dashed #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  font-size: 28rpx;
  margin-right: 10rpx;
  font-weight: bold;
  min-width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

/* 错误信息样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  text-align: center;
}

.error-message {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9800;
  margin: 30rpx 0 20rpx;
}

.error-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.error-suggestion {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.no-result {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 30rpx;
} 